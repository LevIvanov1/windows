<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatFragment"
    android:id="@+id/ChatFragment">

    <TextView
        android:id="@+id/pystota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:textSize="16dp"
        android:textColor="?attr/textColorPrimary"
        android:background="?backgroundPrimaryColor"
        />

    <TextView
        android:id="@+id/name_chat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="15dp"
        android:textSize="16dp"
        android:fontFamily="@font/sochi"
        android:textColor="?attr/textColorPrimary"
        android:background="?backgroundPrimaryColor"
        android:layout_marginStart="90dp"
        android:text="Чат" />


    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@+id/name_chat" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:textColor="?attr/textColorPrimary"
        android:textSize="23dp"
        android:background="@drawable/button_back"
        app:layout_constraintBottom_toBottomOf="@+id/name_chat"
        app:layout_constraintTop_toTopOf="@+id/name_chat"
        app:layout_constraintEnd_toStartOf="@+id/name_chat" />


</androidx.constraintlayout.widget.ConstraintLayout>