<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.ui.LoginFragment"
    android:id="@+id/LoginFragment">

    <TextView
        android:id="@+id/pystota"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="?attr/textColorPrimary"
        android:background="?backgroundPrimaryColor"
        />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Логин"
        android:textSize="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/pystota"
        android:textColor="?attr/textColorPrimary"
        android:background="?backgroundPrimaryColor"
        />
    <EditText
        android:id="@+id/inputLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="17dp"
        android:hint="Введите свой логин"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/pystota"
        android:textColor="?attr/textColorPrimary"
        android:background="?backgroundPrimaryColor"
        />

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/textLogin"
        android:background="#AAAAAA"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="?attr/textColorPrimary"
        android:background="?backgroundPrimaryColor"
        android:textSize="17dp"
        android:text=""
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        />
    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="?attr/textColorPrimary"
        android:background="?backgroundPrimaryColor"
        android:textSize="17dp"
        android:hint="Введите свой пароль"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        />

    <TextView
        android:id="@+id/loginError"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:text=""
        android:textSize="12dp"
        android:textColor="#B40000"
        app:layout_constraintBottom_toTopOf="@id/textPassword"
        app:layout_constraintEnd_toEndOf="@+id/textLogin"
        app:layout_constraintStart_toStartOf="@id/textLogin"
        app:layout_constraintTop_toBottomOf="@id/textLogin" />

    <TextView
        android:id="@+id/passwordError"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:text=""
        android:textColor="#B40000"
        android:textSize="11dp"
        app:layout_constraintStart_toStartOf="@id/textPassword"
        app:layout_constraintTop_toBottomOf="@id/textPassword" />

    <TextView
        android:id="@+id/loginOrPasswordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text=""
        android:textColor="#B40000"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@id/button_register"
        app:layout_constraintStart_toStartOf="@id/textPassword"
        app:layout_constraintTop_toBottomOf="@id/passwordError" />

    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/textPassword"
        android:background="#AAAAAA"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <Button
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:textSize="17dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line3"
        />
</androidx.constraintlayout.widget.ConstraintLayout>